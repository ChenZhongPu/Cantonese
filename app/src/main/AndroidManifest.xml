<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sjtu.chenzhongpu.cantonese">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/set_str"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".StarsActivity"
            android:label="@string/title_activity_stars"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sjtu.chenzhongpu.cantonese.MainActivity" />
        </activity>
        <activity
            android:name=".StarDetailActivity"
            android:label="@string/title_activity_star_detail"
            android:parentActivityName=".StarsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sjtu.chenzhongpu.cantonese.StarsActivity" />
        </activity>
        <activity
            android:name=".PinyinInputActivity"
            android:label="@string/title_activity_pinyin_input"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sjtu.chenzhongpu.cantonese.MainActivity" />
        </activity>
    </application>

</manifest>